<div class="product-container">
  <div class="product-photo">
    <%= link_to(product) do %>
    <%= image_tag product.image_url %><% end %>
  </div>
  <div class="product-information">
    <h3><%= product.title %></h3>
    <h4><%= product.user.name %></h4>
    <p>
      <%= product.description %>
    </p>
    <div class="product-sub-information">

      <h4><%= product.get_time_remaining %></h4>
      <h4><%= product.percent_pledged  %></h4>

    </div>
  </div>
</div>

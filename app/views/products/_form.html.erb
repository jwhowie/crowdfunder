<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :goal %><br>
    <%= f.number_field :goal %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br>
    <%= f.datetime_select :start_date %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br>
    <%= f.datetime_select :end_date %>
  </div>
  
  <div class="field">
    <%= f.label :tags %><br>
    <%= f.text_field :tags %>
  </div>
    <% counter = 1 %>
    <% @rewards.each do |reward|%>
    <div>
      <h1>
        Reward Option
        <%=counter%>
        <% counter += 1 %>
      </h1>

      <%=render 'rewards/form', reward: reward %>
      </div>
    <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

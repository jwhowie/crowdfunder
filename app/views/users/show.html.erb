<div id="show">

<p id="notice"><%= notice %></p>

<div>
  <h3><%= @user.name %></h3>
</div>
<div>
<h2>My Products</h2>
  <div class='myProducts'>
    <% @products.each do |product| %>
        <%=render '/products/product', product:product %>
        <%= button_to "Edit", edit_product_path(:id => product.id), :method => :get  %>
        <% if product.pledges.count == 0 %>
          <%= button_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
    <% end %>


  </div>

</div>

<div>
<h2>My Pledges</h2>
  <div class='myPledges'>
    <% @pledges.each do |pledge| %>
      <%  product = pledge.product %>
        <%=render '/products/product', product:product %>
        <div class=pledge>
           <p> Pledge Amount $
             <%=pledge.amount %>
           </p>

        </div>
        <% end %>
  </div>
</div>
</div>
